{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "types": ["node", "@cucumber/cucumber", "@playwright/test"]
    },
    "include": ["steps/**/*.ts", "features/**/*.feature"],
    "exclude": ["node_modules"]
}
